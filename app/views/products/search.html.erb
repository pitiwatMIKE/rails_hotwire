<div style="height:100%">
    <%= link_to 'Back', products_path, class:"button-1 button-back"%>
    <% if @product_search %>
     <div>
        <table class="table table-borderless">
        <thead>
          <tr>
            <th>Name</th>
            <th>Qty</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @product_search.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.qty %></td>
              <td><button class="button-1 button-edit"><%= link_to 'Edit', edit_product_path(product), style:"color:black" %></button></td>
              <td><button class="button-1 button-delete" data-bs-toggle="modal" data-bs-target="#exampleModal" >Delete</button></td>
            </tr>
            <%= render 'modal', product: product  %> 
          <% end %>
        </tbody>
      </table>
    </div>
    <% end %>
</div>