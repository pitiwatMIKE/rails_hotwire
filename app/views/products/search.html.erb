<div>
    <%= link_to 'Back', products_path %>
    <% if @product_search %>
     <div>
        <table>
        <thead>
            <tr>
            <th>Name</th>
            <th>Qty</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @product_search.each do |product| %>
            <tr>
                <td><%= product.name %></td>
                <td><%= product.qty %></td>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    </div>
    <% end %>
</div>